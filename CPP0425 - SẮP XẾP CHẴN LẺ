#include <iostream>
#include <algorithm>
using namespace std;
int main()
{
    int m, n;
    cin >> m;
    while (m--)
    {
        cin >> n;
        int a[n], b[n], count = 0;
        for (int i = 0; i < n; i++)
        {
            cin >> a[i];
        }
        sort(a, a + n);
        for (int i = 0; i < n; i += 2)
        {
            b[i] = a[count++];
        }
        for (int i = 1; i < n; i += 2)
        {
            b[i] = a[count++];
        }
        for (int i = 0; i < n; i++)
        {
            cout << b[i] << " ";
        }
        cout << endl;
    }
}
