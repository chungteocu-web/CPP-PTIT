#include <iostream>
#include <string>
#include <cmath>
#include <algorithm>
#include <iomanip>
using namespace std;
struct ThiSinh
{
    string ten;
    string sinh;
    double mon1, mon2, mon3;
};
void in(struct ThiSinh &A)
{
    cout << A.ten << " ";
    cout << A.sinh << " ";
    cout << fixed << setprecision(1) << A.mon1 + A.mon2 + A.mon3;
}
void nhap(struct ThiSinh &A)
{
    getline(cin, A.ten);
    cin >> A.sinh;
    cin >> A.mon1 >> A.mon2 >> A.mon3;
}
int main(){
    struct ThiSinh A;
    nhap(A);
    in(A);
    return 0;
}
