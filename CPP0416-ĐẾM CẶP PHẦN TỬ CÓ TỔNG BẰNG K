#include <iostream>
#include <string>
#include <sstream>
#include <vector>
#include <algorithm>
#include <map>
using namespace std;
int main()
{
    int m;
    cin >> m;
    cin.ignore();
    while (m--)
    {
        int n, k;
        cin >> n >> k;
        vector<int> a(n);
        map<int, int> b;
        for (int i = 0; i < n; i++)
        {
            cin >> a[i];
            b[a[i]]++;
        }
        int sum = 0;
        for (int i = 0; i < n; i++)
        {
            if (b[k - a[i]] != 0)
            {
                if (a[i] == k - a[i])
                {
                    sum += b[k - a[i]] - 1;
                }
                else
                {
                    sum += b[k - a[i]];
                }
            }
        }
        cout << sum/2 << endl;
    }
}
