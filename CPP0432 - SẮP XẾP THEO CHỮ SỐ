#include <iostream>
#include <algorithm>
#include <vector>
#include <cmath>
using namespace std;
int check(string s1, string s2)
{
    if (s1 > s2)
    {
        return 1;
    }
    else
        return 0;
}
bool sosanh(string s1, string s2)
{
    return s1 + s2 > s2 + s1;
}
int main()
{
    int n, k, x, m;
    cin >> m;
    while (m--)
    {
        cin >> n;
        vector<string> a(n);
        for (int i = 0; i < n; i++)
        {
            cin >> a[i];
        }
        sort(a.begin(), a.end(), sosanh);
        string res = a[0];
        for (int i = 1; i < n; i++)
        {
            res = res + a[i];
        }
        cout << res << endl;
    }
}
