#include <iostream>
#include <algorithm>
#include <vector>
#include <cmath>
#include <map>
using namespace std;
long long MOD = 1e9 + 7;
long long tinhmu(long long a, long long x)
{
    long long sum = 1;
    for (int i = 0; i < x; i++)
    {
        sum = (sum * (a % MOD)) % MOD;
    }
    return sum;
}
long long tinh(long long a[], long long n, long long x)
{
    long long sum = 0;
    for (int i = 0; i < n; i++)
    {
        sum += (a[n - 1 - i] % MOD * tinhmu(x, i)) % MOD;
        sum %= MOD;
    }
    return sum;
}
int main()
{
    int m;
    cin >> m;
    while (m--)
    {
        long long n, x;
        cin >> n >> x;
        long long a[n];
        for (int i = 0; i < n; i++)
        {
            cin >> a[i];
        }
        cout << tinh(a, n, x) << endl;
    }
}
